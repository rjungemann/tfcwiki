<% @posts.each do |post| %>
  <h2>
		<a href="/wiki/<%= post["slug"] %>">
			<%= post["name"] %>
		</a>
		<%= Date.parse(post["created_on"]).strftime("%D") %>
	</h2>
  
  <div><%= post["parsed_contents"] %></div>
  
  <div style="margin: 18px auto;">
    <% unless post["tags"].blank? %>
    	<b>Tagged as</b> <%= @post["tags"] %> &mdash;
		<% end %>
		
    <b>Last updated</b> <%= Date.parse(post["updated_on"]).strftime("%D") %>
  </div>
<% end %>

<h3><a href="/wiki/create">Create a new post</a></h3>